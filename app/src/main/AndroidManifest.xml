<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kmu.mopproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <!--위에 줄을 추가해야 키보드가 자동으로 나타나지 않음-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".foods_pic"
            android:label="@string/title_activity_foods_pic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".add_video"
            android:label="@string/title_activity_bucket_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".special_day"
            android:label="@string/title_activity_special_day"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".travel"
            android:label="@string/title_activity_travel"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".add_story"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".normal_day"
            android:label="normal_day"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

</manifest>